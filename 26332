#include <iostream>
using namespace std;

int main() {
    ios::sync_with_stdio(0);
    cin.tie(0);

    int n, c, p; cin >> n;
    for (int i = 0; i < n; i++) {
        cin >> c >> p;
        if (c == 1) {
            cout << c << " " << p << "\n";
            cout << c * p << "\n";
        }
        else {
            cout << c << " " << p << "\n";
            cout << c * p - ((c - 1) * 2) << "\n";
        }
    }

    return 0;
}
