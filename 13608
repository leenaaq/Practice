#include <iostream>
using namespace std;

int main() {
    ios::sync_with_stdio(0);
    cin.tie(0);

    int n, c, v; cin >> n;
    while (n != 0) {
        int sum = 0;
        for (int i = 0; i < n; i++) {
            cin >> c >> v;
            sum += v / 2;
        }
        cout << sum / 2 << "\n";
        cin >> n;
    }

    return 0;
}
