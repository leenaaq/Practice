#include <iostream>

int main() {
    
    int a, b=1;
    std::cin >> a;

    for (int i = 0; i < a; i++) {
        for (int j = 0; j < a-i-1; j++) {
            std::cout << " ";
        }
        for (int z = 0; z < b; z++) {
            std::cout << "*";
        }
        b += 2;
        std::cout << "\n";
    }
    return 0;
}
