#include <iostream>
using namespace std;

int main() {
	
	int a, b = 0;
	bool c = true;
	cin >> a;
	
	for (int i = 1; i <= a; i++) {
		if (c == false) {
			b--;
			//cout << b << "\n";
			if (b == 1) c = true;
		}
		else if (c == true) {
			b++;
			//cout << b << "\n";
			if (b == 5) c = false;
		}
	}
	cout << b;

	return 0;
}
